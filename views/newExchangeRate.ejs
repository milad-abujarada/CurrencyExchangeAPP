<%- include header.ejs %>
<div class="col-sm-6">	
	<label>Exchange:
		<select id="from">
			<% for(let i = 0; i < currencies.length; i++){ %>
				<% if(currencies[i].currencySymbol){%>
						<option><%= currencies[i].countryName + ' / ' + currencies[i].currencyName + ' / ' + currencies[i].currencySymbol%></option>
					<%} else {%>
						<option><%= currencies[i].countryName + ' / ' + currencies[i].currencyName %></option>
					<%}%>
			<% } %>
		</select>
	</label>
	<label> To:
		<select id="to">
			<% for(let i = 0; i < currencies.length; i++){ %>
				<% if(currencies[i].currencySymbol){%>
						<option><%= currencies[i].countryName + ' / ' + currencies[i].currencyName + ' / ' + currencies[i].currencySymbol%></option>
					<%} else {%>
						<option><%= currencies[i].countryName + ' / ' + currencies[i].currencyName %></option>
					<%}%>
			<% } %>
		</select>
	</label>
	<input type="button" value="Xchange it!" id="xchangeIt" class="btn btn-info btn-primary btn-md">
	<label for="result"> Exchange rate:</label>
	<br>
	<div id="result"></div>
	<div id="reverseResult"></div>
	<div id="localhost" style="display:none;"><%= heroku%></div>
</div>
