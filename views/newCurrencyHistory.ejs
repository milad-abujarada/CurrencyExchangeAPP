
<%- include header.ejs %>
<%- include navBar.ejs %>
	<div class="alert alert-success" style="display:none" id="saved">Data was saved successfully</div>
	<div class="text-center">
		<form class="form-inline">
			<div class="form-group">
				<label class="control-label" for="currencyFrom">Exchange:</label>
				<select id="currencyFrom" class="form-control">
					<% for(let i = 0; i < currencies.length; i++){ %>
						<% if(currencies[i].currencySymbol){%>
								<option><%= currencies[i].countryName + ' / ' + currencies[i].currencyName + ' / ' + currencies[i].currencySymbol%></option>
							<%} else {%>
								<option><%= currencies[i].countryName + ' / ' + currencies[i].currencyName %></option>
							<%}%>
					<% } %>
				</select>
			</div>
			<div class="form-group">
				<label class="control-label" for="currencyTo">To:</label>
				<select id="currencyTo" class="form-control">
					<% for(let i = 0; i < currencies.length; i++){ %>
						<% if(currencies[i].currencySymbol){%>
								<option><%= currencies[i].countryName + ' / ' + currencies[i].currencyName + ' / ' + currencies[i].currencySymbol%></option>
							<%} else {%>
								<option><%= currencies[i].countryName + ' / ' + currencies[i].currencyName %></option>
							<%}%>
					<% } %>
				</select>
			</div>
		</form>
		<br>
		<div class="text-center" style="width:40%; margin:auto;">
			<form class="form-inline">
				<div class="form-group">
					<label class="control-label" for="fromDate">From:</label>
					<input class="form-control" type="date" name="fromDate" id="fromDate">
					
					<label class="control-label" for="toDate">To:</label>
					<input class="form-control" type="date" name="toDate" id="toDate">	
				</div>
			</form>
		</div>
	</div>
	<br>
	<div class="text-center">
		<button class="btn btn-info btn-primary btn-md" id="xchangeIt">Xchange it! History</button>
	</div>
	<br>
	<div class="text-center"> Exchange rate History:</div>
	<div style="width:75%; margin: 0 auto;">
		<canvas id="myChart" ></canvas>
	</div>
	<div id="localhost" style="display:none;"><%= heroku%></div>
<script type="text/javascript" src='/scripts/currencyHistoryScript.js' ></script>
